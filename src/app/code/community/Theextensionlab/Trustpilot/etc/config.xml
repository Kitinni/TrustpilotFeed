<config>
    <modules>
        <Theextensionlab_Trustpilot>
            <version>1.0.0</version>
        </Theextensionlab_Trustpilot>
    </modules>
    <global>
        <blocks>
            <theextensionlab_trustpilot>
                <class>Theextensionlab_Trustpilot_Block</class>
            </theextensionlab_trustpilot>
        </blocks>

        <models>
            <theextensionlab_trustpilot>
                <class>Theextensionlab_Trustpilot_Model</class>
            </theextensionlab_trustpilot>
        </models>

        <helpers>
            <theextensionlab_trustpilot>
                <class>Theextensionlab_Trustpilot_Helper</class>
            </theextensionlab_trustpilot>
        </helpers>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <theextensionlab_trustpilot>
                    <file>theextensionlab/trustpilot.xml</file>
                </theextensionlab_trustpilot>
            </updates>
        </layout>
    </adminhtml>

    <frontend>
        <layout>
            <updates>
                <theextensionlab_trustpilot>
                    <file>theextensionlab/trustpilot.xml</file>
                </theextensionlab_trustpilot>
            </updates>
        </layout>
    </frontend>

    <default>
        <theextensionlab_trustpilot_settings>
            <feed_fundamental>
                <feed_url>http://s.trustpilot.com/tpelements/917278/f.json.gz</feed_url>
                <review_count>5</review_count>
                <show_default_feed>1</show_default_feed>
            </feed_fundamental>
            <feed_basic_settings>
                <show_header>1</show_header>
                <show_reviews>1</show_reviews>
            </feed_basic_settings>
            <feed_advanced_settings>
                <show_user_images>1</show_user_images>
                <show_company_rating_as_text>1</show_company_rating_as_text>
                <show_amount_of_reviews_text>1</show_amount_of_reviews_text>
                <show_date>1</show_date>
                <review_character_limit>250</review_character_limit>
            </feed_advanced_settings>
        </theextensionlab_trustpilot_settings>
    </default>
</config>